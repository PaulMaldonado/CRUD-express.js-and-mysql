
<div class="container">
  <div class="row mt-4">
    <div class="col-md-4 col-sm-12 col-lg-4 col-xl-4 mx-auto">
      <div class="card">
        <div class="card-header">Editar producto</div>
        <div class="card-body">
          <form action="/edit" method="POST">
            <div class="form-group">
              <input type="text" name="name" value="{{name}}" placeholder="Editar nombre de producto" class="form-control">
            </div>
            <div class="form-group">
              <input type="number" name="price" value="{{price}}" placeholder="Editar precio del producto" class="form-control">
            </div>

            <input type="submit" value="Editar" class="btn btn-primary btn-block">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>